# Development Dockerfile for Nadar App
FROM node:18-alpine AS development

# Install development tools
RUN apk add --no-cache git

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm ci

# Copy source code
COPY . .

# Create non-root user for development
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nadar -u 1001 && \
    chown -R nadar:nodejs /app

USER nadar

# Expose ports for Expo development
EXPOSE 19000 19001 19006

# Development command
CMD ["npm", "run", "web"]
